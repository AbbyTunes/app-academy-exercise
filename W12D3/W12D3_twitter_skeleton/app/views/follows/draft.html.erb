<% if current_user.follows?(user) %>
  <form action="<%= user_follow_url(user) %>" method="post">
    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="delete">
    <input class="follow-toggle" type="submit" value="Unfollow">
  </form>
<% else %>
  <form action="<%= user_follow_url(user) %>" method="post">
    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">
    <input class="follow-toggle" type="submit" value="Follow">
  </form>
<% end %>


  
<% if current_user.follows?(user) %>
  <button class="follow-toggle" data="">Unfollow</button>
<% else %>
  <button class="follow-toggle">Follow</button>
<% end %>